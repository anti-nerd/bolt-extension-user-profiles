{% from '@bolt/_macro/_macro.twig' import attr %}

{#=== OPTIONS ========================================================================================================#}

{% set option = {
    class:          field.class|default(''),
    label:          field.label|default(''),
    pattern:        field.pattern|default(''),
    placeholder:    field.placeholder|default(''),
    info:           field.info|default(''),
    required:       field.required|default(false),
    errortext:      field.error|default(''),
    height:         field.height|default(null)
} %}


{#=== INIT ===========================================================================================================#}

{% set attr_text = {
    class:          option.class ~ ' form-control large',
    name:           name,
    required:       option.required,
    pattern:        (option.pattern and option.pattern not in ['url', 'email']) ? option.pattern : '',
    placeholder:    option.placeholder,
    style:          option.height ? 'height: ' ~ option.height ~ ';' : '',
    data_errortext: option.errortext,
    value:          content,
} %}

{#=== FIELDSET =======================================================================================================#}

<fieldset class="textarea">

    <label class="col-sm-2 col-md-3 col-lg-4 control-label">{{ option.label ? option.label : name | capitalize }}</label>
    <div class="col-sm-10 col-md-9 col-lg-8">
        <input{{ attr(attr_text) }}>
    </div>

</fieldset>
